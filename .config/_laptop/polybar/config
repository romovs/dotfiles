[module/battery]
    type = custom/script
    exec = ~/.config/polybar/battery.sh
    tail = false
    interval = 3
    format = %{A:mate-power-statistics&:}%{A3:mate-power-preferences&:}<label>%{A}%{A}

[module/skype]
    type = custom/script
    exec = ~/.config/polybar/skype.sh
    tail = false
    interval = 2
    format = <label>

[module/eth]
    type = internal/network
    interface = enp0s31f6
    interval = 3
    format-connected = %{F#6b6b6b}%{F-}%{F#95cae3}<label-connected>%{F-}
    format-disconnected = %{F#6b6b6b}%{F-} %{F#95cae3}<label-disconnected>%{F-}
    label-connected = %ifname%
    label-disconnected = ~

[module/wifi]
    type = internal/network
    interface = wlp3s0
    interval = 3
    format-connected = %{A1:~/.config/polybar/wifi-menu.sh:}%{F#6b6b6b}%{F-} %{F#95cae3}<label-connected>%{F-}%{A}
    format-disconnected = %{A1:~/.config/polybar/wifi-menu.sh:}%{F#6b6b6b}%{F-} %{F#95cae3}<label-disconnected>%{F-}%{A}
    label-connected = %essid%
    label-disconnected = ~
